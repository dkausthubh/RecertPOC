@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head >
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OneCert</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&display=swap" rel="stylesheet">

</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-barclays shadow-sm px-4">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="~/images/Barclays-Logo-PNG-300x300.png" class="me-2" style="height:40px;" alt="Logo" />
                <span class="onecert-font">OneCert</span></span>

            </a>
            <div class="ms-auto">
                <span class="text-white me-3">Welcome, @User.Identity?.Name</span>
                <a class="btn btn-outline-light btn-sm" href="/Account/Logout">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Main Layout -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 bg-sidebar py-4 min-vh-100 text-white">
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a class="nav-link text-white" href="/AccessList">Access List</a></li>
                    <li class="nav-item mb-2"><a class="nav-link text-white" href="/Reports">Reports</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Settings">Settings</a></li>
                </ul>
            </div>

            <!-- Main Content -->
            <main class="col-md-10 py-4 px-4 bg-light">
                <h5 class="mb-3">@ViewData["Title"]</h5>
                <hr />
                @RenderBody()
            </main>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
