@{
    ViewData["Title"] = "SARBIS - Smart AI Recertification of BARCLAYS IT Systems";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Application Access List</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container py-4">
  <h2 class="mb-4 text-primary">Application Access List</h2>

  <!-- Progress Bar -->
  <div class="mb-3">
    <label for="progress">Overall Recertification Progress</label>
    <div class="progress" style="height: 20px;">
      <div class="progress-bar bg-success" role="progressbar" style="width: 0%;">0%</div>
    </div>
  </div>

  <div class="row">
    <!-- Left Column -->
    <div class="col-md-4">
      <!-- Users Card -->
      <div class="card mb-3">
        <i class="fas fa-users" style="font-size: 1.5rem; color: #3e94db;"></i>
        <br>
        <div class="card-header bg-info text-white">
          Users Assigned To Me
        </div>
        <div class="card-body">
          <input type="text" class="form-control mb-2" placeholder="Search Users...">
          <div class="form-check mb-2">
            <input class="form-check-input" type="checkbox" id="selectAllUsers">
            <label class="form-check-label" for="selectAllUsers">Select All Users</label>
          </div>
          <div class="list-group small">
            <label class="list-group-item"><input class="form-check-input me-1" type="checkbox"> Rishil Sethi</label>
            <label class="list-group-item"><input class="form-check-input me-1" type="checkbox"> Anshuman Kumar</label>
            <label class="list-group-item"><input class="form-check-input me-1" type="checkbox"> Aman Kumar</label>
            <label class="list-group-item"><input class="form-check-input me-1" type="checkbox"> Prema Singh</label>
            <label class="list-group-item"><input class="form-check-input me-1" type="checkbox"> Smita Bhulerao</label>
            <label class="list-group-item"><input class="form-check-input me-1" type="checkbox"> Pradnya Ravindra Dhepe</label>
          </div>
        </div>
      </div>

      <!-- Applications Card -->
      <div class="card mb-3">
        <i class="fas fa-boxes" style="font-size: 1.5rem; color: #2ecc71;"></i>
        <br>
        <div class="card-header text-white" style="background-color: #2ecc71;">
          Applications
        </div>
        <div class="card-body">
          <input type="text" class="form-control mb-2" placeholder="Search Applications...">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" checked>
            <label class="form-check-label">CERTIFICATENOW</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" checked>
            <label class="form-check-label">GILab PROD</label>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column -->
    <div class="col-md-8">
      <div class="card">
        <i class="fas fa-coins" style="font-size: 1.5rem; color: #1b4dd6;"></i>
        <br>
        <div class="card-header bg-primary text-white">
          Pending Recertifications
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between mb-2">
            <div>
              <button class="btn btn-outline-secondary btn-sm me-2">Group by App Account</button>
              <button class="btn btn-outline-secondary btn-sm">Group by App Profile</button>
            </div>
            <button class="btn btn-success btn-sm">Save Progress</button>
          </div>
         <table class="table table-bordered table-hover" style="table-layout: auto; width: auto;">
            <thead style="background-color: #1b4dd6; color: rgb(61, 120, 247);">
                <tr>
                    <th style="white-space: nowrap;">
                        <input type="checkbox" itemid="selectAll" onclick="toggleSelectAll(this)">
                    </th>
                    <th style="white-space: nowrap;" scope="col">Application</th>
                    <th style="white-space: nowrap;" scope="col">User</th>
                    <th style="white-space: nowrap;" scope="col" class="text-center">Last Used</th>
                    <th style="white-space: nowrap;" scope="col" class="text-center">Approve</th>
                    <th style="white-space: nowrap;" scope="col" class="text-center">Reject</th>
                    <th style="white-space: nowrap;" scope="col" class="text-center">
                        <i class="fas fa-brain" style="font-size: 1.5rem; color: #f1c40f;"></i> SARBIS Recommendation
                    </th>
                </tr>
            </thead>
            <tbody>
              <tr>
                <td><input type="checkbox"></td>
                <td>CERTIFICATENOW</td>
                <td>Anshuman Kumar (INTRANET\w0)</td>
                <td></td>
                <td class="text-center"><input type="radio" name="cert1"></td>
                <td class="text-center"><input type="radio" name="cert1"></td>
               <td></td>
              </tr>
              <tr>
                <td><input type="checkbox"></td>
                <td>GILab PROD</td>
                <td>Anshuman Kumar (INTRANET\w0)</td>
                <td></td>
                <td class="text-center"><input type="radio" name="cert2"></td>
                <td class="text-center"><input type="radio" name="cert2"></td>
                <td></td>                
              </tr>              
            </tbody>
          </table>
          <div class="alert alert-warning mt-3 small">
            Note: Saved actions must still be submitted to complete your recertification.
          </div>
          <button class="btn btn-success btn-sm">Send Email</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
